<%= form_for(idea) do |f| %>
  <%= f.label       :title %>
  <%= f.text_field  :title %>
  <%= f.label       :description %>
  <%= f.text_area   :description %>
  <%= f.collection_select(:category_id, Category.all, :id, :name ) %>
  <%= f.hidden_field :user_id %>
  <% if idea = @idea %>
    <%= f.submit      "Update Idea" %>
  <% else %>
    <%= f.submit      "Create Idea" %>
  <% end %>
<% end %>
